<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.mobsandgeeks.ui.TypefaceTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Your device has been setup.\nCheck the indicator ( as shown in the example below ) to ensure it is shown as &apos;1&apos; or &apos;2&apos;"
            android:textAppearance="?android:attr/textAppearanceLarge"
            app:customTypeface="roboto.ttf" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/tutorial_three" />

        <com.mobsandgeeks.ui.TypefaceTextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="You can switch off your WIFI and proceed to access the device via the internet."
            android:textAppearance="?android:attr/textAppearanceLarge"
            app:customTypeface="roboto.ttf" />

        <info.hoang8f.widget.FButton
            android:id="@+id/bFinishSetup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Finish Setup!"
            app:buttonColor="@color/fbutton_default_color"
            app:cornerRadius="0dp"
            app:shadowColor="@color/fbutton_default_shadow_color"
            app:shadowEnabled="true"
            app:shadowHeight="5dp" />
    </LinearLayout>

</ScrollView>