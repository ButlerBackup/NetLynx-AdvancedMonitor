<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/about_us_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0071B8"
        android:textSize="30dp"
        app:customTypeface="roboto.ttf" />

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:customTypeface="roboto.ttf" />

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="By"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:customTypeface="roboto.ttf" />

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/about_us_company_one"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:customTypeface="roboto.ttf" />

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="And"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:customTypeface="roboto.ttf" />

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvVersion"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/about_us_company_two"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:customTypeface="roboto.ttf" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:src="@drawable/netlynx" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:src="@drawable/netlynx" />

</RelativeLayout>