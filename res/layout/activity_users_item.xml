<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:orientation="vertical"
    android:padding="10dp" >

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        app:customTypeface="roboto_bold.ttf" />

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvName"
        android:layout_toLeftOf="@+id/ivDeleteUser"
        android:gravity="right"
        android:paddingRight="8dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:customTypeface="roboto.ttf" />

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/tvRequestStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvTimestamp"
        android:layout_toRightOf="@+id/textView1"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:customTypeface="roboto.ttf" />

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvRequestStatus"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        app:customTypeface="roboto_bold.ttf" />

    <com.mobsandgeeks.ui.TypefaceTextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvRequestStatus"
        android:layout_alignBottom="@+id/tvRequestStatus"
        android:layout_alignParentLeft="true"
        android:text="Status : "
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:customTypeface="roboto.ttf" />

    <ImageView
        android:id="@+id/ivDeleteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvRole"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_cross" />

</RelativeLayout>