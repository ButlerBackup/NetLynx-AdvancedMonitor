<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.mobsandgeeks.ui.TypefaceTextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Enter your partner&apos;s handphone number"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:customTypeface="roboto.ttf" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/tutorial_community_three" />

            <com.mobsandgeeks.ui.TypefaceTextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Choose a role, as well as a device. You&apos;re good to go!"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:customTypeface="roboto.ttf" />

            <info.hoang8f.widget.FButton
                android:id="@+id/bSetup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Let&apos;s Register Now!"
                app:buttonColor="@color/fbutton_default_color"
                app:cornerRadius="0dp"
                app:shadowColor="@color/fbutton_default_shadow_color"
                app:shadowEnabled="true"
                app:shadowHeight="5dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>